modules = ["nodejs-20", "web", "python-3.11"]

[nix]
channel = "stable-24_05"

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 3003
externalPort = 3003

[[ports]]
localPort = 39185
externalPort = 80

[agent]
expertMode = true
integrations = ["github:1.0.0"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "GitHub Sync"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Blog API Server"

[[workflows.workflow]]
name = "GitHub Sync"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"Ready to sync to GitHub! Run 'npm run sync' to push your changes.\""

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Blog API Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd part4 && npm start"
waitForPort = 3003

[workflows.workflow.metadata]
outputType = "console"
